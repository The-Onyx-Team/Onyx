@inherits LayoutComponentBase

@layout MainLayout

<MudContainer Gutters="false" Style="height: 100%" Class="ma-0 pa-0">
    <MudContainer Style="height: 100%; 
                         position: absolute; 
                         z-index: -1000 !important; 
                         background-image: url('img/LoginBackground.png'); 
                         background-position: center; 
                         background-repeat: no-repeat; 
                         background-size: cover;"
                  Class="ma-0 pa-0 mud-width-full" MaxWidth="MaxWidth.False">
    </MudContainer>
    <MudContainer Style="height: 15vh; position: absolute;" Class="pa-0 ma-5 d-flex align-center">
        <MudImage Src="/img/Icon.png" Alt="Icon"
                  Style="max-width: 80px; min-width: 60px; width: 10%; height: auto;"
                  Class="mr-5 ml-5"/>
        <MudText Typo="Typo.h4" Style="color: #FFFFFF">Onyx</MudText>
    </MudContainer>
    <MudContainer Style="position: absolute; 
                         top: 50%; left: 50%; 
                         transform: translate(-50%, -50%);
                         border-radius: 2.5vw; 
                         background-color: #E4E4E4; 
                         opacity: 85%; 
                         padding: 4vw; 
                         color: #000000;"
                  Class="d-flex flex-column align-center justify-center"
                  MaxWidth="MaxWidth.Medium">
        <MudGrid Justify="Justify.Center"
                 Style="opacity: 100%; 
                        background-color: transparent;">
            <MudItem lg="9" md="9" sm="8" xs="8" Class="d-flex flex-column align-content-space-between 
                            justify-center">
                @Body
            </MudItem>
        </MudGrid>
    </MudContainer>
</MudContainer>

