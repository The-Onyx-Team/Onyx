@page "/Account/Manage/Profile"

<MudContainer Fluid="true" MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <MudText Typo="Typo.h3">Profile</MudText>
    <MudCard Class="mt-4">
        <MudCardContent>
            <MudGrid Gutter="3">
                <MudItem xs="12" sm="4">
                    <MudAvatar Size="Size.Large">
                        <MudImage Src=""></MudImage><!--implement upload image-->
                    </MudAvatar>

                    <div class="mt-2">
                        <MudButton Variant="Variant.Outlined">
                            Upload new photo
                            <InputFile OnChange="@OnFileChanged" Style="display:none"/>
                        </MudButton>
                        <MudButton Variant="Variant.Text" Class="ml-2">Reset</MudButton>
                    </div>

                </MudItem>
            </MudGrid>

            <MudTextField T="string" Label="Username" Class="mt-3" FullWidth="true"/>
            <MudTextField T="string" Label="Name" FullWidth="true"/>
            <MudTextField T="string" Label="E-mail" Class="mt-2" FullWidth="true"/>

            <MudAlert Severity="Severity.Warning" Elevation="0" Class="mt-2">
                Your email is not confirmed. Please check your inbox.
                <MudLink Href="javascript:void(0)">Resend confirmation</MudLink>
            </MudAlert>

            <MudTextField T="string" Label="Company" Class="mt-2" FullWidth="true"/>
        </MudCardContent>
        <MudCardActions Class="justify-end">
            <MudButton Color="Color.Primary" Variant="Variant.Filled">Save changes</MudButton>
            <MudButton Variant="Variant.Text" Class="ml-2">Cancel</MudButton>
        </MudCardActions>
    </MudCard>
</MudContainer>


